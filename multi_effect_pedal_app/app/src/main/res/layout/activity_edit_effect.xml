<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:orientation="vertical"
    tools:context=".EditEffect">


    <Button
        android:id="@+id/saveButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/darkgray"
        android:onClick="onSaveClicked"
        android:text="Save"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/darker_gray"
            android:text="First Effect-set    "
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/darker_gray"
            android:text="Second Effect-set"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/darker_gray"
            android:text="Third Effect-set"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mainMux"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/flowIn"
            android:layout_width="50dp"
            android:layout_height="145dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/flowin" />

        <LinearLayout
            android:id="@+id/set1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/button11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient1"
                android:onClick="on11Clicked"
                android:text="Effect"
                android:textSize="8sp" />

            <Button
                android:id="@+id/button12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient1"
                android:onClick="on12Clicked"
                android:text="Effect"
                android:textSize="8sp" />

            <Button
                android:id="@+id/button13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient1"
                android:onClick="on13Clicked"
                android:text="Effect"
                android:textSize="8sp" />

            <Button
                android:id="@+id/add1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onadd1Clicked"
                android:text="Add"
                android:textSize="8sp" />

            <Button
                android:id="@+id/remove1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onremove1Clicked"
                android:text="Remove"
                android:textSize="8sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/flowOne"
            android:layout_width="50dp"
            android:layout_height="145dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/flowone" />

        <LinearLayout
            android:id="@+id/set2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/button21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient2"
                android:onClick="on21Clicked"
                android:text="Effect"
                android:textSize="8sp" />

            <Button
                android:id="@+id/button22"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient2"
                android:onClick="on22Clicked"
                android:text="Effect"
                android:textSize="8sp" />

            <Button
                android:id="@+id/button23"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient2"
                android:onClick="on23Clicked"
                android:text="Effect"
                android:textSize="8sp" />

            <Button
                android:id="@+id/add2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onadd2Clicked"
                android:text="Add"
                android:textSize="8sp" />

            <Button
                android:id="@+id/remove2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onremove2Clicked"
                android:text="Remove"
                android:textSize="8sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/flowTwo"
            android:layout_width="50dp"
            android:layout_height="145dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/flowtwo" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/button31"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient3"
                android:onClick="on31Clicked"
                android:text="Effect"
                android:textSize="8sp" />

            <Button
                android:id="@+id/button32"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient3"
                android:onClick="on32Clicked"
                android:text="Effect"
                android:textSize="8sp" />

            <Button
                android:id="@+id/button33"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/gradient3"
                android:onClick="on33Clicked"
                android:text="Effect"
                android:textSize="8sp" />

            <Button
                android:id="@+id/add3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onadd3Clicked"
                android:text="Add"
                android:textSize="8sp" />

            <Button
                android:id="@+id/remove3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onremove3Clicked"
                android:text="Remove"
                android:textSize="8sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/flowOut"
            android:layout_width="50dp"
            android:layout_height="145dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/flowout" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/editEffect"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/effectIdent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Effect" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Spinner
                android:id="@+id/effectSel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:entries="@array/effects_array" />

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="From 0?" />

            <CheckBox
                android:id="@+id/checkBox3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="From 1?" />

            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Do Wipe?" />

            <CheckBox
                android:id="@+id/checkBox4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="OBTF/ Looper" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Weight of Effect Relative to Parallel Effects (0-3)" />

        <EditText
            android:id="@+id/effectWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Weight"
            android:inputType="number" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Values" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/effectNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Value"
                android:inputType="number" />

            <EditText
                android:id="@+id/effectNum2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Value2"
                android:inputType="number" />

            <EditText
                android:id="@+id/effectNum3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Value3"
                android:inputType="number" />

        </LinearLayout>

        <Button
            android:id="@+id/done"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onDoneClicked"
            android:text="Done" />

    </LinearLayout>

</LinearLayout>